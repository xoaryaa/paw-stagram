<%- include('layouts/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <% if(message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong>
                <%=message.message %>
            </strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <% if (users != ''){ %>
                <table class="table table-striped text-center my-3">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>name</th>
                        <th>image</th>
                        
                        <th>caption</th>
                        <th>email</th>
                        <th>action</th>
                    </tr>
                </thead>
                <tbody>
                   <% users.forEach((user,index)=> {%>
                    <tr class="align-middle">
                        <td>
                            <%= index+1 %>
                        </td>
                        <td><%= user.name %> </td>
                        <td><img src="<%=user.image %> " width="300" class="img-thumbnail" ></td>
                        
                        
                        <td><%= user.caption %> </td>
                        <td><%= user.email %> </td>
                        <td>
                            <a href="/edit/<%=user._id%>" class="text-success" ><i class="fas fa-edit fa-lg mx-1"></i></a>
                            <a href="/delete/<%=user._id%>" class="text-danger" ><i class="fas fa-trash fa-lg mx-1"></i></a>
                        </td>
                    </tr>
                   <%}) %>
                </tbody>
                </table>
                <% } else { %>
                    <h1 class="text-center text secondary mt-5">No users found in the database!</h1> 
                 <%    } %>
            </div>
        </div>
    </div>
</div>
 
<%- include('layouts/footer') %>
